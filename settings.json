{
  "data": {
    "raw": {
      "path": "audio_data/raw_data/isolated_hits",
      "dir_structure": ["hit_labels", "kit_labels", "tech_labels"],
      "file_type": "wav"
    },
    "cropped": {
      "path": "audio_data/cropped_data",
      "dir_structure": ["hit_labels", "kit_labels", "tech_labels"],
      "file_type": "gz",
      "batch_size": 100,
      "down_sampling_rate": 3000,
      "hanning_window_size": 100,
      "length": 0.25,
      "onset_trim": 1000
    },
    "pre_multiclass_augmented": {
      "path": "audio_data/pre-multiclass_augmented_data",
      "dir_structure": ["pre_augs", "hit_labels", "kit_labels", "tech_labels"],
      "file_type": "gz",
      "batch_size": 100,
      "augmentation": ["amplitude", "pitch", "translation"],
      "amount": 10
    },
    "multiclassed": {
      "path": "audio_data/multiclassed_data",
      "dir_structure": ["pre_augs", "hit_labels", "kit_labels", "tech_labels"],
      "file_type": "gz",
      "batch_size": 100,
      "hit_combinations": [
        ["beater"],
        ["stick"],
        ["beater", "stick"],
        ["stick", "stick"],
        ["beater", "stick", "stick"]
      ]
    },
    "post_multiclass_augmented": {
      "path": "audio_data/post-multiclass_augmented_data",
      "dir_structure": [
        "pre_augs",
        "post_augs",
        "hit_labels",
        "kit_labels",
        "tech_labels"
      ],
      "file_type": "gz",
      "batch_size": 100,
      "augmentation": ["add_noise", "reduce_noise"],
      "amount": 10
    },
    "training": {
      "path": "audio_data/training_data",
      "dir_structure": [
        "pre_augs",
        "post_augs",
        "hit_labels",
        "kit_labels",
        "tech_labels"
      ],
      "file_type": "gz",
      "batch_size": 50
    }
  },
  "labels": {
    "hit_label": ["beater", "stick"],
    "kit_label": [
      "bass_drum",
      "crash",
      "hi_hat",
      "high_tom",
      "mid_tom",
      "low_tom",
      "ride",
      "snare",
      "splash"
    ],
    "tech_label": ["normal", "open"]
  }
}
